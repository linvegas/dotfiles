#!/usr/bin/env sh

# Lil script for starting redshift on login
# and automatic location based on gps

[ ! -x "$(command -v redshift)" ] && exit

lat_long=$(
  curl -s "https://location.services.mozilla.com/v1/geolocate?key=geoclue" |
  jq -r '"\(.location.lat):\(.location.lng)"'
)

redshift -l "$lat_long"
