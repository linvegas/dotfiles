#!/usr/bin/env sh

[ ! "$(command -v rofi)" ] && notify-send "Rofi is not installed" && exit 1

INPUT=$(
  echo "|||" |\
  rofi -dmenu -sep "|" -theme "$HOME/.config/rofi/themes/power.rasi"
)

case "$INPUT" in
  ) systemctl suspend;;
  ) systemctl poweroff;;
  ) systemctl reboot;;
  ) xdotool key Control_L+Alt_L+BackSpace;;
esac
