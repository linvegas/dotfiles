#!/bin/sh

xrdb -load ~/.config/X11/xresources

# For nvidia people
xrandr --setprovideroutputsource modesetting NVIDIA-0

# local scripts
setmonitor &
#setwallpaper &

numlockx &
setxkbmap -option caps:escape &
xset s off -dpms &
xset r rate 300 50 &
/usr/lib/geoclue-2.0/demos/agent &
redshift &
xcompmgr &

# mpd server
[ ! -s ~/.config/mpd/pid ] && mpd &
[[ -z $(pgrep -xU $UID mpdscribble) ]] && mpdscribble &

exec i3
